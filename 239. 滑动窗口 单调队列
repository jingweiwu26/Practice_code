class Solution:
    def maxSlidingWindow(self, nums: List[int], k: int) -> List[int]:
        
        from collections import deque
        q = deque()
        
        res = []
        
        for idx, num in enumerate(nums):
        
            if q and q[0] +k ==idx:
                q.popleft()
        
            while q and nums[q[-1]] < nums[idx]:
                q.pop()
            
            q.append(idx)
          
            if idx >= k-1:
                res.append(nums[q[0]])
            
        return res