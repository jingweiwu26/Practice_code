class Solution:
    def simplifyPath(self, path: str) -> str:
        
        stk = []
        for part in path.split('/'):
            if part in ('','.'):
                continue
            elif part == '..':
                if stk:
                    stk.pop()
                continue
            else:
                stk.append(part)
        
        res = ''
        while stk:
            res = "/" + stk.pop()  + res
        return res if res else "/"