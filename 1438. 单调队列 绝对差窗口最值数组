class Solution:
    def longestSubarray(self, nums: List[int], limit: int) -> int:
        l=0
        res=0
        from collections import deque
        maxq = deque()
        minq = deque()
        for r, n in enumerate(nums):
        
            while maxq and nums[maxq[-1]] <= n:
                maxq.pop()
            maxq.append(r)
            
            while minq and nums[minq[-1]]>= n:
                minq.pop()
            minq.append(r)

            while maxq and minq and nums[maxq[0]] - nums[minq[0]] > limit:
                if l == maxq[0]:
                    maxq.popleft()
                if l == minq[0]:
                    minq.popleft()
                 
                l+=1
            res = max(res, r-l+1)
        return res