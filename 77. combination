# basic approach

class Solution:
    def combine(self, n: int, k: int) -> List[List[int]]:
        path = []
        res = []

        def backtrack(idx):
            if len(path) == k:
                res.append(path[:])
                return
            for i in range(idx,n+1):
                path.append(i)
                backtrack(i+1)
                path.pop()
        backtrack(1)
        return res

#å‰ªæ

class Solution:
    def combine(self, n: int, k: int) -> List[List[int]]:
        path = []
        res = []

        def backtrack(idx):
            if len(path) == k:
                res.append(path[:])
                return
            for i in range(idx,n+2-(k-len(path))):
                path.append(i)
                backtrack(i+1)
                path.pop()
        backtrack(1)
        return res
